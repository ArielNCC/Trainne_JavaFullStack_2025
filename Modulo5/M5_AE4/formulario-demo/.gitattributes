# Auto detect text files and perform LF normalization
* text=auto

# Java files
*.java text eol=lf
*.jsp text eol=lf
*.jspx text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.xml text eol=lf

# Configuration files
*.properties text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# SQL files
*.sql text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf

# Maven files
pom.xml text eol=lf
mvnw text eol=lf
mvnw.cmd text eol=crlf

# Binary files
*.jar binary
*.war binary
*.ear binary
*.zip binary
*.tar.gz binary
*.pdf binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Image files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Font files
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# Archives
*.7z binary
*.gz binary
*.rar binary
*.tar binary
*.zip binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
