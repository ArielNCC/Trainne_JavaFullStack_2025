					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status 404 Not Found', function () {",
									"    pm.response.to.have.status(404);",
									"});",
									"",
									"pm.test('Error message presente', function () {",
									"    var jsonData = pm.response.json();",
