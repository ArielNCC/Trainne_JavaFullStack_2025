					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/productos/99999",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "productos", "99999"]
						}
					}
				},
				{
					"name": "Crear producto con datos inválidos",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status 400 Bad Request', function () {",
									"    pm.response.to.have.status(400);",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{jwt_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nombre\": \"\",\n  \"descripcion\": \"Producto con datos inválidos\",\n  \"precio\": -100,\n  \"stockDisponible\": -5\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/productos",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "productos"]
						}
					}
				}
			]
		}
	]
